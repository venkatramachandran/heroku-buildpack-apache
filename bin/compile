#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -ex

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR
APACHE_INSTALLED=`which apache2ctl > /dev/null && echo $?`
if [ -z $APACHE_INSTALLED ] ; then
  #Apache not installed. Install it.
  echo '===========> Installing Apache.'
  sudo apt-get update
  sudo apt-get install -qy apache2
  sudo cp $LP_DIR/conf/*.conf /etc/apache2
  sudo service apache2 stop
else
  #Apache is installed. Stop apache2ctl
  echo '===========> Stopping Apache.'
  sudo apache2ctl -k stop
fi

cat >>boot.sh <<EOF
set +x
sudo echo '192.168.56.101 stack' >> /etc/hosts
sudo apache2ctl -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR/*
